<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/member_item"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/light_green"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_member_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:elevation="8dp"
        android:src="@drawable/ic_nav_profile"
        app:layout_constraintBottom_toBottomOf="@+id/member_item"
        app:layout_constraintStart_toStartOf="@+id/member_item"
        app:layout_constraintTop_toTopOf="@+id/member_item" />

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:text="Sandesh"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/member_item"
        app:layout_constraintStart_toEndOf="@+id/iv_member_icon"
        app:layout_constraintTop_toTopOf="@+id/member_item" />
    
    <TextView
        android:id="@+id/tv_member_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Baker's Field, Chimney Nagar, Near Hovalo Circle"
        android:textSize="16sp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_member_name"
        app:layout_constraintStart_toEndOf="@id/iv_member_icon"
        app:layout_constraintEnd_toEndOf="@id/member_item"/>


</androidx.constraintlayout.widget.ConstraintLayout>